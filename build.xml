<?xml version="1.0" encoding="UTF-8"?>
<project name="meeno" default="jar">

    <!-- Uncomment the following property if no tests compilation is needed -->
    <!--
    <property name="skip.tests" value="true"/>
     -->

    <property name="compiler.debug" value="on"/>
    <property name="compiler.generate.no.warnings" value="off"/>
    <property name="compiler.args" value="-parameters -encoding utf8"/>
    <property name="compiler.max.memory" value="700m"/>

    <patternset id="library.patterns">
        <include name="*.jar"/>
    </patternset>

    <patternset id="compiler.resources">
        <exclude name="**/?*.java"/>
        <exclude name="**/?*.class"/>
    </patternset>

    <path id="library.runtime-lib.classpath">
        <fileset dir="${basedir}/lib">
            <patternset refid="library.patterns"/>
        </fileset>
    </path>

    <path id="library.test-lib.classpath">
        <fileset dir="${basedir}/test-lib">
            <patternset refid="library.patterns"/>
        </fileset>
    </path>

    <dirname property="basedir" file="${ant.file}"/>

    <property name="compiler.args" value="-encoding UTF-8 -source 8 ${compiler.args}"/>

    <property name="output.dir" value="${basedir}/out/production"/>
    <property name="test.output.dir" value="${basedir}/out/test"/>

    <path id="compile.sources.classpath">
    <path refid="library.runtime-lib.classpath"/>
    </path>

    <path id="compile.tests.classpath">
        <pathelement location="${output.dir}"/>
        <path refid="library.test-lib.classpath"/>
        <path refid="library.runtime-lib.classpath"/>
    </path>

    <path id="source.path">
        <dirset dir="${basedir}">
        <include name="src"/>
        </dirset>
    </path>

    <target name="compile.sources">
        <mkdir dir="${output.dir}"/>
        <javac destdir="${output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}"
               memorymaximumsize="${compiler.max.memory}" fork="true" includeantruntime="false">
            <compilerarg line="${compiler.args}"/>
            <classpath refid="compile.sources.classpath"/>
            <src refid="source.path"/>
        </javac>

        <copy todir="${output.dir}">
            <fileset dir="${basedir}/src">
            <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <path id="test.source.path">
        <dirset dir="${basedir}">
            <include name="test"/>
        </dirset>
    </path>

    <target name="compile.tests" unless="skip.tests">
        <mkdir dir="${test.output.dir}"/>
        <javac destdir="${test.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}"
               memorymaximumsize="${compiler.max.memory}" fork="true" includeantruntime="false">
            <compilerarg line="${compiler.args}"/>
            <classpath refid="compile.tests.classpath"/>
            <src refid="test.source.path"/>
        </javac>

        <copy todir="${test.output.dir}">
            <fileset dir="${basedir}/test">
            <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="clean">
        <delete dir="${output.dir}"/>
        <delete dir="${test.output.dir}"/>
    </target>

    <target name="jar" depends="clean, compile.sources, compile.tests">
        <jar destfile="out/meeno.jar">
            <fileset dir="${output.dir}"/>
            <fileset dir="${basedir}/src"/>
        </jar>
    </target>

</project>